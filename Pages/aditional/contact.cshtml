@page
@model NSFWpics.Pages.aditional.contactModel
@{
    ViewData["Title"] = "contact";
}

<h2>Contact</h2>

<div class="  center-align">
    <div class="container center-align">
        <h4>
            Contact us with form below
        </h4>
        <br />
        <form method="post" name="forma">
            <div class="input-field">
                <i class="material-icons prefix">email</i>
                <input id="email" type="email" class="validate" required placeholder="email@domain.com" />
                <label for="mail" data-error="wrong" data-success="right">Email</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input type="text" required />
                <label>Name</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">web</i>
                <input type="url" required />
                <label>Site</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">phone</i>
                <input type="tel" placeholder="eg. +12 123456789" />
                <label>Phone No. *optional</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">format_quote</i>
                <textarea id="textarea" class="materialize-textarea"></textarea>
                <label for="textarea">What you'd like to tell us?</label>
            </div>
            <input type="hidden" name="submited" value="true" />
            <input type="submit" value="Send" asp-page-handler="Send" class="waves-effect waves-light red lighten-3 btn" />
            <br /><br />
            <div class="g-recaptcha" data-sitekey="6LeWRUoUAAAAAMt8nKaMFX62NzC-HFf8w6I7Z-sW"></div>
        </form>
    </div>
</div>
