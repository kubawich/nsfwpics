@page "{id:int?}"
@model NSFWpics.Pages.NewFolder.viewModel
@{
    ViewData["Title"] = "view";
}
<br />
<div id="app">
    <div class="container center-align">
        <!--Exo network ads-->
        <p id="img_tags" class="center-align">Advertisement</p>
        <script type="text/javascript">
            var ad_idzone = "2935176",
                ad_width = "300",
                ad_height = "50";
        </script>
        <script type="text/javascript" src="https://ads.exosrv.com/ads.js"></script>
        <noscript><a href="https://main.exosrv.com/img-click.php?idzone=2935176" target="_blank"><img src="https://syndication.exosrv.com/ads-iframe-display.php?idzone=2935176&output=img&type=300x50" width="300" height="50"></a></noscript>
        <div class="row z-depth-5" id="content_element">
            <span id="h" class="col left ">
                <a href="@Model.Image.Uri">#@Model.Image.Id</a>
            </span>
            <span id="feed" class="col right">
                <span id="points">@Model.Image.Points</span>
                <button v-on:click="points += 1" class="btn-floating btn-large waves-effect waves-light light-green"><i class="material-icons">thumb_up</i></button>
                <button v-on:click="points -= 1" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">thumb_down</i></button>
            </span>
            <br /><br />
             @{ 
                string link = Model.Image.Uri.ToString();
                string extension = link.Substring(link.Length - 3);
                if (extension == "png")
                {
                    <img class="materialboxed col center-align s-12" src="@Model.Image.Uri" alt="Photo from link @Model.Image.Uri" id="photo_no_@Model.Image.Id" name="photo" />
                } else if (extension == "mp4")
                {
                    <video src="@Model.Image.Uri" alt="Video from link @Model.Image.Uri" id="my-video" width="400" height="250" class="afterglow" controls />
                }
                else
                {
                    <div style="width: 100%; height: 0px; position: relative; padding-bottom: 56.250%;">
                    <iframe src="@Model.Image.Uri" frameborder="0" width="100%" height="100%" allowfullscreen style="width: 100%; height: 100%; position: absolute;"></iframe></div>
                }

            }
            <br />
            <span id="img_tags">
                By @Model.Image.Author at @Model.Image.Date
            </span>
            <br />
        </div>
        <br /><br />
        <!--Exo network ads-->
        <p id="img_tags" class="center-align">Advertisement</p>
        <script type="text/javascript">
            var ad_idzone = "2935150",
                ad_width = "300",
                ad_height = "50";
        </script>
        <script type="text/javascript" src="https://ads.exosrv.com/ads.js"></script>
        <noscript><a href="https://main.exosrv.com/img-click.php?idzone=2935150" target="_blank"><img src="https://syndication.exosrv.com/ads-iframe-display.php?idzone=2935150&output=img&type=300x50" width="300" height="50"></a></noscript>
    </div>
</div>
</br></br>
